<yas>
    <scene root="root" axis_length="5" />

    <views default="cam0">
        <perspective id="cam0" near="0.1" far="500" angle="23">
            <from x="0" y="0" z="0" />
            <to x="15" y="15" z="15" />
        </perspective>

        <ortho id="cam1" near="0.1" far="500" left="200" right="250" top="250" bottom="200" />
    </views>

    <ambient>
        <ambient r="0.1" g="0.1" b="0.1" a="1" />
        <background r="0.1" g="0.1" b="0.1" a="1" />
    </ambient>

    <lights>
        <omni id="light0" enabled="1" >
            <location x="0" y="6" z="0" w="1" />
            <ambient r="0.1" g="0.1" b="0.1" a="1.0" />
            <diffuse r="0.6" g="0.6" b="0.6" a="1.0" />
            <specular r="0.3" g="0.3" b="0.3" a="1.0" />
        </omni>

        <omni id="light1" enabled="1" >
            <location x="6" y="6" z="0" w="1" />
            <ambient r="0.1" g="0.1" b="0.1" a="1.0" />
            <diffuse r="0.6" g="0.6" b="0.6" a="1.0" />
            <specular r="0.3" g="0.3" b="0.3" a="1.0" />
        </omni>

        <omni id="light2" enabled="1" >
            <location x="0" y="6" z="6" w="1" />
            <ambient r="0.1" g="0.1" b="0.1" a="1.0" />
            <diffuse r="0.6" g="0.6" b="0.6" a="1.0" />
            <specular r="0.3" g="0.3" b="0.3" a="1.0" />
        </omni>

        <omni id="light3" enabled="1" >
            <location x="6" y="6" z="6" w="1" />
            <ambient r="0.1" g="0.1" b="0.1" a="1.0" />
            <diffuse r="0.6" g="0.6" b="0.6" a="1.0" />
            <specular r="0.3" g="0.3" b="0.3" a="1.0" />
        </omni>

        <spot id="light4" enabled="0" angle="23" exponent="1">
            <location x="10" y="10" z="10" w="10" />
            <target x="0" y="0" z="0" />
            <ambient r="0.1" g="0.1" b="0.1" a="1" />
            <diffuse r="0.6" g="0.6" b="0.6" a="1" />
            <specular r="0.3" g="0.3" b="0.3" a="1" />
        </spot>
    </lights>

    <textures>
        <texture id="test" file="scenes/images/testTexture.png" />
    </textures>

    <materials>
        <material id="root" shininess="500" >
            <specular r="0.3" g="0.3" b="0.3" a="1.0" />
            <ambient r="0.1" g="0.1" b="0.1" a="1.0" />
            <diffuse r="0.6" g="0.6" b="0.6" a="1.0" />
            <emission r="0" g="0" b="0" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="boat-transf">
            <translate x="0" y="0" z="0" />
        </transformation>
    </transformations>

    <primitives>
        <primitive id="face">
            <rectangle x1="0" y1="0" x2="5" y2="5" />
        </primitive>
    </primitives>

    <components>
        <component id="root">
            <transformation>
            </transformation>

            <materials>
                <material id="root" />
            </materials>

            <texture id="none" length_s="1" length_t="1" />

            <children>
                <componentref id="cube" />
            </children>
        </component>

        <component id="cube">
            <transformation>
            </transformation>

            <materials>
                <material id="root" />
            </materials>

            <texture id="test" length_s="1" length_t="1" />

            <children>
                <componentref id="face1" />
                <componentref id="face2" />
                <componentref id="face3" />
                <componentref id="face4" />
                <componentref id="face5" />
                <componentref id="face6" />
            </children>
        </component>

        <component id="face1">
            <transformation>
                <translate x="0" y="0" z="5" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="inherit" length_s="10" length_t="10" />

            <children>
                <primitiveref id="face" />
            </children>
        </component>

        <component id="face2">
            <transformation>
                <rotate axis="y" angle="-90" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="inherit" length_s="1" length_t="1" />

            <children>
                <primitiveref id="face" />
            </children>
        </component>

        <component id="face3">
            <transformation>
                <translate x="5" y="0" z="0" />
                <rotate axis="y" angle="180" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="inherit" length_s="1" length_t="1" />

            <children>
                <primitiveref id="face" />
            </children>
        </component>

        <component id="face4">
            <transformation>
                <translate x="5" y="0" z="5" />
                <rotate axis="y" angle="90" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="inherit" length_s="1" length_t="1" />

            <children>
                <primitiveref id="face" />
            </children>
        </component>

        <component id="face5">
            <transformation>
                <rotate axis="x" angle="90" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="inherit" length_s="10" length_t="10" />

            <children>
                <primitiveref id="face" />
            </children>
        </component>

        <component id="face6">
            <transformation>
                <translate x="0" y="5" z="5" />
                <rotate axis="x" angle="-90" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="inherit" length_s="10" length_t="10" />

            <children>
                <primitiveref id="face" />
            </children>
        </component>

    </components>

</yas>
