<yas>
    <scene root="root" axis_length="5" />

    <views default="cam0">
        <perspective id="cam0" near="0.1" far="500" angle="23">
            <from x="0" y="0" z="0" />
            <to x="15" y="15" z="15" />
        </perspective>

        <ortho id="cam1" near="0.1" far="500" left="200" right="250" top="250" bottom="200">
            <from x="0" y="0" z="0" />
            <to x="15" y="15" z="15" />
        </ortho>
    </views>

    <ambient>
        <ambient r="0.1" g="0.1" b="0.1" a="1" />
        <background r="0.1" g="0.1" b="0.1" a="1" />
    </ambient>

    <lights>
        <omni id="light0" enabled="1" >
            <location x="5" y="3" z="2.5" w="1" />
            <ambient r="0.1" g="0.1" b="0.1" a="1.0" />
            <diffuse r="0.6" g="0.6" b="0.6" a="1.0" />
            <specular r="0.3" g="0.3" b="0.3" a="1.0" />
        </omni>

        <omni id="light1" enabled="1" >
            <location x="2.5" y="3" z="5" w="1" />
            <ambient r="0.1" g="0.1" b="0.1" a="1.0" />
            <diffuse r="0.6" g="0.6" b="0.6" a="1.0" />
            <specular r="0.3" g="0.3" b="0.3" a="1.0" />
        </omni>

        <spot id="light2" enabled="0" angle="23" exponent="1">
            <location x="10" y="10" z="10" w="10" />
            <target x="0" y="0" z="0" />
            <ambient r="0.1" g="0.1" b="0.1" a="1" />
            <diffuse r="0.6" g="0.6" b="0.6" a="1" />
            <specular r="0.3" g="0.3" b="0.3" a="1" />
        </spot>
    </lights>

    <textures>
        <texture id="water" file="scenes/images/water.jpeg" />

        <texture id="houses" file="scenes/images/ribeira.jpeg" />

        <texture id="bridge" file="scenes/images/pontedluis.jpg" />
    </textures>

    <materials>
        <material id="root" shininess="1" >
            <specular r="0.3" g="0.3" b="0.3" a="1.0" />
            <ambient r="0.1" g="0.1" b="0.1" a="1.0" />
            <diffuse r="0.6" g="0.6" b="0.6" a="1.0" />
            <emission r="0" g="0" b="0" a="1.0" />
        </material>

        <material id="water" shininess="500" >
            <specular r="0.3" g="0.3" b="0.3" a="1.0" />
            <ambient r="0.1" g="0.1" b="0.1" a="1.0" />
            <diffuse r="0.6" g="0.6" b="0.6" a="1.0" />
            <emission r="0" g="0" b="0" a="1.0" />
        </material>

        <material id="houses" shininess="1" >
            <specular r="0.3" g="0.3" b="0.3" a="1.0" />
            <ambient r="0.1" g="0.1" b="0.1" a="1.0" />
            <diffuse r="0.6" g="0.6" b="0.6" a="1.0" />
            <emission r="0" g="0" b="0" a="1.0" />
        </material>

        <material id="bridge" shininess="1" >
            <specular r="0.3" g="0.3" b="0.3" a="1.0" />
            <ambient r="0.1" g="0.1" b="0.1" a="1.0" />
            <diffuse r="0.6" g="0.6" b="0.6" a="1.0" />
            <emission r="0" g="0" b="0" a="1.0" />
        </material>

        <material id="boat" shininess="1" >
            <specular r="0.3" g="0.3" b="0.3" a="1.0" />
            <ambient r="0.1" g="0.1" b="0.1" a="1.0" />
            <diffuse r="0.6" g="0.6" b="0.6" a="1.0" />
            <emission r="0" g="0" b="0" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="boat-transf">
            <translate x="2.5" y="0.125" z="2.5" />
        </transformation>

        <transformation id="sail-transf">
            <translate x="0" y="0.5" z="0" />
        </transformation>

        <transformation id="float-transf">
            <translate x="4" y="0.05" z="4" />
            <scale  x="0.5" y="0.5" z="0.5" />
            <rotate axis="x" angle="90" />
        </transformation>

        <transformation id="water-transf">
            <translate x="0" y="0" z="5" />
            <rotate axis="x" angle="-90" />
        </transformation>

        <transformation id="houses-transf">
            <translate x="0" y="0" z="5" />
            <rotate axis="y" angle="90" />
        </transformation>

        <transformation id="sun-transf">
            <translate x="1" y="7" z="1" />
            <scale x="1.5" y="1.5" z="1.5" />
        </transformation>
    </transformations>

    <primitives>
        <primitive id="scenario">
            <rectangle x1="0" y1="0" x2="5" y2="5" />
        </primitive>

        <primitive id="boat-part">
            <rectangle x1="-0.5" y1="-0.5" x2="0.5" y2="0.5" />
        </primitive>

        <primitive id="boat-mast">
            <cylinder base="0.1" top="0.1" height="2" slices="8" stacks="8" />
        </primitive>

        <primitive id="boat-sail">
            <triangle x1="0" y1="-0.5" z1="-0.5"
                      x2="0" y2="0.5" z2="0"
                      x3="0" y3="-0.5" z3="0.5" />
        </primitive>

        <primitive id="float">
            <torus inner="0.1" outer="0.2" slices="8" loops="8" />
        </primitive>

        <primitive id="sun">
            <sphere radius="0.5" slices="8" stacks="8" />
        </primitive>
    </primitives>

    <components>
        <component id="root">
            <transformation>
            </transformation>

            <materials>
                <material id="root" />
            </materials>

            <texture id="none" length_s="1" length_t="1" />

            <children>
                <componentref id="water" />
                <componentref id="houses" />
                <componentref id="sun" />
                <componentref id="bridge" />
                <componentref id="float" />
                <componentref id="boat" />
            </children>
        </component>

        <component id="water">
            <transformation>
                <transformationref id="water-transf" />
            </transformation>

            <materials>
                <material id="water" />
            </materials>

            <texture id="water" length_s="1" length_t="1" />

            <children>
                <primitiveref id="scenario" />
            </children>
        </component>

        <component id="houses">
            <transformation>
                <transformationref id="houses-transf" />
            </transformation>

            <materials>
                <material id="houses" />
            </materials>

            <texture id="houses" length_s="1" length_t="1" />

            <children>
                <primitiveref id="scenario" />
            </children>
        </component>

        <component id="bridge">
            <transformation>
            </transformation>

            <materials>
                <material id="bridge" />
            </materials>

            <texture id="bridge" length_s="1" length_t="1" />

            <children>
                <primitiveref id="scenario" />
            </children>
        </component>

        <component id="sun">
            <transformation>
                <transformationref id="sun-transf" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="none" length_s="1" length_t="1" />

            <children>
                <primitiveref id="sun" />
            </children>
        </component>

        <component id="float">
            <transformation>
                <transformationref id="float-transf" />
            </transformation>

            <materials>
                <material id="root" />
            </materials>

            <texture id="none" length_s="1" length_t="1" />

            <children>
                <primitiveref id="float" />
            </children>
        </component>

        <component id="boat">
            <transformation>
                <transformationref id="boat-transf" />
            </transformation>

            <materials>
                <material id="boat" />
            </materials>

            <texture id="none" length_s="1" length_t="1" />

            <children>
                <componentref id="boat-base" />
                <componentref id="boat-sail" />
            </children>
        </component>

        <component id="boat-sail">
            <transformation>
                <!-- <transformationref id="sail-transf" /> -->
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="none" length_s="1" length_t="1" />

            <children>
                <componentref id="boat-sail-sail" />
                <componentref id="boat-sail-sail2" />
                <componentref id="boat-sail-mast" />
            </children>
        </component>

        <component id="boat-sail-sail">
            <transformation>
                <translate x="0" y="1" z="-0.125" />
                <scale x="0.75" y="0.5" z="0.5" />
                <rotate axis="y" angle="-90" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="none" length_s="1" length_t="1" />

            <children>
                <primitiveref id="boat-sail" />
            </children>
        </component>

        <component id="boat-sail-sail2">
            <transformation>
                <translate x="0" y="1" z="-0.125" />
                <scale x="0.75" y="0.5" z="0.5" />
                <rotate axis="y" angle="90" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="none" length_s="1" length_t="1" />

            <children>
                <primitiveref id="boat-sail" />
            </children>
        </component>

        <component id="boat-sail-mast">
            <transformation>
                <translate x="0" y="0.125" z="0" />
                <scale x="1" y="0.5" z="1" />
                <rotate axis="x" angle="-90" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="none" length_s="1" length_t="1" />

            <children>
                <primitiveref id="boat-mast" />
            </children>
        </component>

        <component id="boat-base">
            <transformation>
                <scale x="0.75" y="0.25" z="1.5" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="none" length_s="1" length_t="1" />

            <children>
                <componentref id="boat-top" />
                <componentref id="boat-bottom" />
                <componentref id="boat-front" />
                <componentref id="boat-back" />
                <componentref id="boat-left" />
                <componentref id="boat-right" />
            </children>
        </component>

        <component id="boat-top">
            <transformation>
                <translate x="0" y="0.5" z="0" />
                <rotate axis="x" angle="-90" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="none" length_s="1" length_t="1" />

            <children>
                <primitiveref id="boat-part" />
            </children>
        </component>

        <component id="boat-bottom">
            <transformation>
                <translate x="0" y="-0.5" z="0" />
                <rotate axis="x" angle="90" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="none" length_s="1" length_t="1" />

            <children>
                <primitiveref id="boat-part" />
            </children>
        </component>

        <component id="boat-front">
            <transformation>
                <translate x="0" y="0" z="0.5" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="none" length_s="1" length_t="1" />

            <children>
                <primitiveref id="boat-part" />
            </children>
        </component>

        <component id="boat-back">
            <transformation>
                <translate x="0" y="0" z="-0.5" />
                <rotate axis="x" angle="180" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="none" length_s="1" length_t="1" />

            <children>
                <primitiveref id="boat-part" />
            </children>
        </component>

        <component id="boat-left">
            <transformation>
                <translate x="-0.5" y="0" z="0" />
                <rotate axis="y" angle="-90" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="none" length_s="1" length_t="1" />

            <children>
                <primitiveref id="boat-part" />
            </children>
        </component>

        <component id="boat-right">
            <transformation>
                <translate x="0.5" y="0" z="0" />
                <rotate axis="y" angle="90" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="none" length_s="1" length_t="1" />

            <children>
                <primitiveref id="boat-part" />
            </children>
        </component>
    </components>
</yas>
