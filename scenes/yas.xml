<yas>
    <scene root="root" axis_length="5" />

    <views default="unica-view">
        <perspective id="perspective" near="0.1" far="500" angle="0">
            <from x="0" y="0" z="0" />
            <to x="15" y="15" z="15" />
        </perspective>

        <ortho id="ortho" near="0.1" far="500" left="200" right="250" top="250" bottom="200" />
    </views>

    <ambient>
        <ambient r="0.1" g="0.1" b="0.1" a="1" />
        <background r="1" g="1" b="1" a="1" />
    </ambient>

    <lights>
        <omni id="light0" enabled="1" >
            <location x="0" y="6" z="0" w="1" />
            <ambient r="0.1" g="0.1" b="0.1" a="1.0" />
            <diffuse r="0.6" g="0.6" b="0.6" a="1.0" />
            <specular r="0.3" g="0.3" b="0.3" a="1.0" />
        </omni>

        <omni id="light1" enabled="1" >
            <location x="6" y="6" z="0" w="1" />
            <ambient r="0.1" g="0.1" b="0.1" a="1.0" />
            <diffuse r="0.6" g="0.6" b="0.6" a="1.0" />
            <specular r="0.3" g="0.3" b="0.3" a="1.0" />
        </omni>

        <omni id="light2" enabled="1" >
            <location x="0" y="6" z="6" w="1" />
            <ambient r="0.1" g="0.1" b="0.1" a="1.0" />
            <diffuse r="0.6" g="0.6" b="0.6" a="1.0" />
            <specular r="0.3" g="0.3" b="0.3" a="1.0" />
        </omni>

        <omni id="light3" enabled="1" >
            <location x="6" y="6" z="6" w="1" />
            <ambient r="0.1" g="0.1" b="0.1" a="1.0" />
            <diffuse r="0.6" g="0.6" b="0.6" a="1.0" />
            <specular r="0.3" g="0.3" b="0.3" a="1.0" />
        </omni>
    </lights>

    <textures>
        <texture id="water" file="images/water.jpeg" />

        <texture id="houses" file="images/ribeira.jpeg" />

        <texture id="bridge" file="images/pontedluis.jpg" />
    </textures>

    <materials>
        <material id="water" shininess="500" >
            <specular r="0.3" g="0.3" b="0.3" a="1.0" />
            <ambient r="0.1" g="0.1" b="0.1" a="1.0" />
            <diffuse r="0.6" g="0.6" b="0.6" a="1.0" />
            <specular r="0.3" g="0.3" b="0.3" a="1.0" />
        </material>

        <material id="hill" shininess="1" >
            <specular r="0.3" g="0.3" b="0.3" a="1.0" />
            <ambient r="0.1" g="0.1" b="0.1" a="1.0" />
            <diffuse r="0.6" g="0.6" b="0.6" a="1.0" />
            <specular r="0.3" g="0.3" b="0.3" a="1.0" />
        </material>

        <material id="boat" shininess="1" >
            <specular r="0.3" g="0.3" b="0.3" a="1.0" />
            <ambient r="0.1" g="0.1" b="0.1" a="1.0" />
            <diffuse r="0.6" g="0.6" b="0.6" a="1.0" />
            <specular r="0.3" g="0.3" b="0.3" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="boat-transf">
            <translate x="3" y="0" z="3" />
        </transformation>

        <transformation id="sail-transf">
            <translate x="0" y="0.5" z="0" />
        </transformation>

        <transformation id="float-transf">
            <translate x="4" y="0" z="4" />
            <scale  x="0.5" y="0.5" z="0.5" />
        </transformation>

        <transformation id="water-transf">
            <translate x="0" y="0" z="5" />
            <rotate axis="x" angle="-90" />
        </transformation>

        <transformation id="bridge-transf">
            <translate x="0" y="0" z="5" />
            <rotate axis="y" angle="-90" />
        </transformation>

        <transformation id="sun-transf">
            <translate x="1" y="5" z="1" />
            <scale x="1.5" y="1.5" z="1.5" />
        </transformation>
    </transformations>

    <primitives>
        <primitive id="scenario">
            <rectangle x1="0" y1="0" x2="5" y2="5" />
        </primitive>

        <primitive id="boat-part">
            <rectangle x1="-0.5" y1="-0.5" x2="0.5" y2="0.5" />
        </primitive>

        <primitive id="boat-mast">
            <cylinder base="0.1" top="0.1" height="2" slices="8" stacks="8" />
        </primitive>

        <primitive id="boat-sale">
            <triangle x1="0" y1="-0.5" z1="-0.5"
                      x2="0" y2="0.5" z2="0"
                      x3="0" y3="-0.5" z3="0.5" />
        </primitive>

        <primitive id="float">
            <torus inner="0.1" outer="0.2" slices="8" loops="8" />
        </primitive>

        <primitive id="sun">
            <sphere radius="0.5" slices="8" stacks="8" />
        </primitive>
    </primitives>

    <components>
        <component id="root">
            <transformation>
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="none" length_s="1" length_t="1" />

            <children>
                <componentref id="" />
            </children>
        </component>

        <component id="water">
            <transformation>
                <transformationref id="water-transforms" />
            </transformation>

            <materials>
                <material id="water" />
            </materials>

            <texture id="water" length_s="1" length_t="1" />

            <children>
                <primitiveref id="scenario" />
            </children>
        </component>

        <component id="houses">
            <transformation>
            </transformation>

            <materials>
                <material id="houses" />
            </materials>

            <texture id="houses" length_s="1" length_t="1" />

            <children>
                <primitiveref id="scenario" />
            </children>
        </component>

        <component id="sun">
            <transformation>
                <transformationref id="sun-transf" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="none" length_s="1" length_t="1" />

            <children>
                <primitiveref id="sun" />
            </children>
        </component>

        <component id="bridge">
            <transformation>
                <transformationref id="bridge-transf" />
            </transformation>

            <materials>
                <material id="bridge" />
            </materials>

            <texture id="bridge" length_s="1" length_t="1" />

            <children>
                <primitiveref id="scenario" />
            </children>
        </component>

        <component id="float">
            <transformation>
                <transformationref id="float-transf" />
            </transformation>

            <materials>
                <material id="bridge" />
            </materials>

            <texture id="bridge" length_s="1" length_t="1" />

            <children>
                <primitiveref id="scenario" />
            </children>
        </component>

        <component id="boat">
            <transformation>
                <transformationref id="boat-transf" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="none" length_s="1" length_t="1" />

            <children>
                <componentref id="boat-base" />
                <componentref id="boat-sail" />
            </children>
        </component>

        <component id="boat-sail">
            <transformation>
                <transformationref id="sail-transf" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="none" length_s="1" length_t="1" />

            <children>
                <componentref id="base-sail-sail" />
                <componentref id="base-sail-mast" />
            </children>
        </component>

        <component id="boat-sail-sail">
            <transformation>
                <translate x="0" y="1.5" z="0" />
                <scale x="0.5" y="0.5" z="0.5" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="none" length_s="1" length_t="1" />

            <children>
                <primitiveref id="boat-sail" />
            </children>
        </component>

        <component id="boat-sail-mast">
            <transformation>
                <scale x="1" y="2" z="1" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="none" length_s="1" length_t="1" />

            <children>
                <primitiveref id="boat-mast" />
            </children>
        </component>

        <component id="boat-base">
            <transformation>
                <scale x="2" y="0.5" z="1" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="none" length_s="1" length_t="1" />

            <children>
                <componentref id="base-top" />
                <componentref id="base-bottom" />
                <componentref id="base-left" />
                <componentref id="base-right" />
                <componentref id="base-front" />
                <componentref id="base-back" />
            </children>
        </component>

        <component id="base-top">
            <transformation>
                <translate x="0" y="0.5" z="0" />
                <rotate axis="x" angle="90" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="none" length_s="1" length_t="1" />

            <children>
                <primitiveref id="boat-part" />
            </children>
        </component>

        <component id="base-bottom">
            <transformation>
                <translate x="0" y="-0.5" z="0" />
                <rotate axis="x" angle="-90" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="none" length_s="1" length_t="1" />

            <children>
                <primitiveref id="boat-part" />
            </children>
        </component>

        <component id="base-left">
            <transformation>
                <translate x="0" y="0" z="-0.5" />
                <rotate axis="x" angle="180" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="none" length_s="1" length_t="1" />

            <children>
                <primitiveref id="boat-part" />
            </children>
        </component>

        <component id="base-right">
            <transformation>
                <translate x="0" y="0" z="0.5" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="none" length_s="1" length_t="1" />

            <children>
                <primitiveref id="boat-part" />
            </children>
        </component>

        <component id="base-front">
            <transformation>
                <translate x="0.5" y="0" z="0" />
                <rotate axis="y" angle="-90" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="none" length_s="1" length_t="1" />

            <children>
                <primitiveref id="boat-part" />
            </children>
        </component>

        <component id="base-back">
            <transformation>
                <translate x="-0.5" y="0" z="0" />
                <rotate axis="y" angle="90" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="none" length_s="1" length_t="1" />

            <children>
                <primitiveref id="boat-part" />
            </children>
        </component>
    </components>
</yas>
