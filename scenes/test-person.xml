<yas>
    <scene root="root" axis_length="5" />

    <views default="cam0">
        <perspective id="cam0" near="0.1" far="500" angle="23">
            <from x="30" y="30" z="30" />
            <to x="0" y="0" z="0" />
        </perspective>

        <ortho id="cam1" near="0.1" far="500" left="0" right="10" top="6" bottom="0">
            <from x="50" y="0" z="5" />
            <to x="5" y="0" z="0" />
        </ortho>
    </views>

    <ambient>
        <ambient r="0" g="0" b="0" a="1" />
        <background r="0.1" g="0.1" b="0.1" a="1" />
    </ambient>

    <lights>
        <omni id="light0" enabled="1" >
            <location x="0" y="6" z="0" w="1" />
            <ambient r="0.1" g="0.1" b="0.1" a="1.0" />
            <diffuse r="0.6" g="0.6" b="0.6" a="1.0" />
            <specular r="0.3" g="0.3" b="0.3" a="1.0" />
        </omni>

        <omni id="light1" enabled="1" >
            <location x="6" y="6" z="0" w="1" />
            <ambient r="0.1" g="0.1" b="0.1" a="1.0" />
            <diffuse r="0.6" g="0.6" b="0.6" a="1.0" />
            <specular r="0.3" g="0.3" b="0.3" a="1.0" />
        </omni>

        <omni id="light2" enabled="1" >
            <location x="0" y="6" z="6" w="1" />
            <ambient r="0.1" g="0.1" b="0.1" a="1.0" />
            <diffuse r="0.6" g="0.6" b="0.6" a="1.0" />
            <specular r="0.3" g="0.3" b="0.3" a="1.0" />
        </omni>

        <omni id="light3" enabled="1" >
            <location x="6" y="6" z="6" w="1" />
            <ambient r="0.1" g="0.1" b="0.1" a="1.0" />
            <diffuse r="0.6" g="0.6" b="0.6" a="1.0" />
            <specular r="0.3" g="0.3" b="0.3" a="1.0" />
        </omni>

        <spot id="light4" enabled="0" angle="23" exponent="1">
            <location x="10" y="10" z="10" w="10" />
            <target x="0" y="0" z="0" />
            <ambient r="0.1" g="0.1" b="0.1" a="1" />
            <diffuse r="0.6" g="0.6" b="0.6" a="1" />
            <specular r="0.3" g="0.3" b="0.3" a="1" />
        </spot>
    </lights>

    <textures>
        <texture id="person" file="scenes/images/black.jpg" />
    </textures>

    <materials>
        <material id="root" shininess="500" >
            <specular r="0.3" g="0.3" b="0.3" a="1.0" />
            <ambient r="0.1" g="0.1" b="0.1" a="1.0" />
            <diffuse r="0.6" g="0.6" b="0.6" a="1.0" />
            <emission r="0" g="0" b="0" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="boat-transf">
            <translate x="0" y="0" z="0" />
        </transformation>
    </transformations>

    <animations>
    </animations>

    <primitives>
        <primitive id="head">
            <sphere radius="1" slices="64" stacks="64" />
        </primitive>

        <primitive id="cube-face">
            <rectangle x1="0" y1="0" x2="1" y2="1" />
        </primitive>

        <primitive id="body-member">
            <cylinder base="0.25" top="0.125" height="2" slices="8" stacks="8" />
        </primitive>

        <primitive id="anthena">
            <cylinder base="0.05" top="0.05" height="0.5" slices="8" stacks="8" />
        </primitive>
    </primitives>

    <components>
        <component id="root">
            <transformation>
            </transformation>

            <materials>
                <material id="root" />
            </materials>

            <texture id="none" length_s="1" length_t="1" />

            <children>
                <componentref id="person" />
            </children>
        </component>

        <component id="person">
            <transformation>
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="person" length_s="1" length_t="1" />

            <children>
                <componentref id="head" />
                <componentref id="body" />
                <componentref id="arm-left" />
                <componentref id="arm-right" />
                <componentref id="leg-left" />
                <componentref id="leg-right" />
                <componentref id="drone-controller" />
            </children>
        </component>

        <component id="drone-controller">
            <transformation>
                <translate x="0" y="3" z="1.5" />
                <rotate axis="x" angle="25" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="inherit" length_s="1" length_t="1" />

            <children>
                <componentref id="drone-controller-body" />
                <componentref id="drone-controller-anthena" />
            </children>
        </component>

        <component id="drone-controller-body">
            <transformation>
                <scale x="1" y="0.5" z="0.1" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="inherit" length_s="1" length_t="1" />

            <children>
                <componentref id="cube" />
            </children>
        </component>

        <component id="drone-controller-anthena">
            <transformation>
                <translate x="-0.25" y="0.25" z="0" />
                <rotate axis="x" angle="-90" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="inherit" length_s="1" length_t="1" />

            <children>
                <primitiveref id="anthena" />
            </children>
        </component>

        <component id="head">
            <transformation>
                <translate x="0" y="4" z="0" />
                <scale x="0.5" y="0.5" z="0.5" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="inherit" length_s="1" length_t="1" />

            <children>
                <primitiveref id="head" />
            </children>
        </component>

        <component id="body">
            <transformation>
                <translate x="0" y="2.5" z="0" />
                <scale x="1" y="2" z="0.5" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="inherit" length_s="1" length_t="1" />

            <children>
                <componentref id="cube" />
            </children>
        </component>

        <component id="arm-left">
            <transformation>
                <translate x="0.5" y="3" z="0" />
                <scale x="1" y="1" z="0.75" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="inherit" length_s="1" length_t="1" />

            <children>
                <primitiveref id="body-member" />
            </children>
        </component>

        <component id="arm-right">
            <transformation>
                <translate x="-0.5" y="3" z="0" />
                <scale x="1" y="1" z="0.75" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="inherit" length_s="1" length_t="1" />

            <children>
                <primitiveref id="body-member" />
            </children>
        </component>

        <component id="leg-left">
            <transformation>
                <translate x="0.25" y="1.5" z="0" />
                <rotate axis="x" angle="90" />
                <scale x="1" y="1" z="0.75" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="inherit" length_s="1" length_t="1" />

            <children>
                <primitiveref id="body-member" />
            </children>
        </component>

        <component id="leg-right">
            <transformation>
                <translate x="-0.25" y="1.5" z="0" />
                <rotate axis="x" angle="90" />
                <scale x="1" y="1" z="0.75" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="inherit" length_s="1" length_t="1" />

            <children>
                <primitiveref id="body-member" />
            </children>
        </component>

        <component id="cube">
            <transformation>
                <translate x="-0.5" y="-0.5" z="-0.5" />
            </transformation>

            <materials>
                <material id="root" />
            </materials>

            <texture id="inherit" length_s="1" length_t="1" />

            <children>
                <componentref id="face1" />
                <componentref id="face2" />
                <componentref id="face3" />
                <componentref id="face4" />
                <componentref id="face5" />
                <componentref id="face6" />
            </children>
        </component>

        <component id="face1">
            <transformation>
                <translate x="0" y="0" z="1" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="inherit" length_s="5" length_t="5" />

            <children>
                <primitiveref id="cube-face" />
            </children>
        </component>

        <component id="face2">
            <transformation>
                <rotate axis="y" angle="-90" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="inherit" length_s="1" length_t="1" />

            <children>
                <primitiveref id="cube-face" />
            </children>
        </component>

        <component id="face3">
            <transformation>
                <translate x="1" y="0" z="0" />
                <rotate axis="y" angle="180" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="inherit" length_s="1" length_t="1" />

            <children>
                <primitiveref id="cube-face" />
            </children>
        </component>

        <component id="face4">
            <transformation>
                <translate x="1" y="0" z="1" />
                <rotate axis="y" angle="90" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="inherit" length_s="1" length_t="1" />

            <children>
                <primitiveref id="cube-face" />
            </children>
        </component>

        <component id="face5">
            <transformation>
                <rotate axis="x" angle="90" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="inherit" length_s="5" length_t="5" />

            <children>
                <primitiveref id="cube-face" />
            </children>
        </component>

        <component id="face6">
            <transformation>
                <translate x="0" y="1" z="1" />
                <rotate axis="x" angle="-90" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="inherit" length_s="5" length_t="5" />

            <children>
                <primitiveref id="cube-face" />
            </children>
        </component>
    </components>
</yas>
