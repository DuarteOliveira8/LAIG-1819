        <primitive id="window">
            <rectangle x1="2" y1="2" x2="5" y2="5" />
        </primitive>
        <primitive id="wall">
            <rectangle x1="0" y1="0" x2="7" y2="7" />
        </primitive>
        <primitive id="frame">
            <rectangle x1="0" y1="0" x2="2.736" y2="3.27" />
        </primitive>
        <primitive id="frame2">
            <rectangle x1="0" y1="0" x2="2.52" y2="3.44" />
        </primitive>
        <primitive id="ceiling">
            <triangle x2="0" y2="0" z2="7"
